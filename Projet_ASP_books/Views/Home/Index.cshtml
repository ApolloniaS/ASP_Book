@model Projet_ASP_books.Models.HomeViewModel


<!-- start banner Area -->
@foreach (Projet_ASP_book.Models.RandomBookModel item in Model.RndmBookModel)
{
    <section class="banner-area" id="home">
        <div class="container">
            <div class="row fullscreen d-flex align-items-center justify-content-start">
                <div class="banner-content col-lg-7">
                    <h5 class="text-white text-uppercase">@item.AuthorFullName</h5>
                    <h1 class="text-uppercase">
                        @item.Title
                    </h1>
                    <p class="text-white pt-20 pb-20">
                        @item.Summary
                    </p>
                    <a href="#" class="primary-btn text-uppercase">Voir les avis des lecteurs !</a>
                </div>
                <div class="col-lg-5 banner-right">
                    <img class="img-fluid" src="img/header-img.png" alt="">
                    @*test https://kbimages1-a.akamaihd.net/998b45e4-d21f-4224-9ee1-03bffe8cdc12/353/569/90/False/world-of-warcraft-vol-jin-les-ombres-de-la-horde.jpg*@
                </div>
            </div>
        </div>
    </section>}

<!-- End banner Area -->
<!-- Originally course area -->
<section class="course-area section-gap" id="latestreviews">
    <div class="container">
        <div class="row d-flex justify-content-center">
            <div class="menu-content pb-60 col-lg-9">
                <div class="title text-center">
                    <h1 class="mb-10">Ce que les lecteurs en ont pensé</h1>
                    <p>Les derniers avis !</p>
                </div>
            </div>
        </div>
        <div class="row">
            <div class="active-course-carusel">
                @foreach (Projet_ASP_book.Models.RecentReviewModel item in Model.RecentReviews)
                {
                    <div class="single-course item">
                        <img class="img-fluid" src="@item.Picture" alt="">
                        <div class="details">
                            <a href="#"><h4>@item.Title<span class="price float-right">@item.ReviewScore/5</span></h4></a>
                            <p>
                                @item.ReviewContent<br />
                                -- @item.Username
                            </p>
                        </div>
                    </div>
                }
            </div>
        </div>
    </div>
</section>
<!-- END -->
<!-- Start about Area -->
<section class="section-gap info-area" id="connexion">
    <div class="container">
        <div class="title text-center">
            <h1 class="mb-10">Connexion</h1>
        </div>
        <form method="post">
            @Html.AntiForgeryToken()
            <div class="mt-10">
                <input type="text" name="username" placeholder="Nom d'utilisateur" onfocus="this.placeholder = ''" onblur="this.placeholder = 'Nom d\'utilisateur" required class="single-input">
                @Html.ValidationMessageFor(model => model.LoginRegister.LoginModel.Login, "", new { @class = "text-danger" })
            </div>
            <div class="mt-10">
                <input type="text" name="password" placeholder="Mot de passe" onfocus="this.placeholder = ''" onblur="this.placeholder = 'Mot de passe'" required class="single-input">
                @Html.ValidationMessageFor(model => model.LoginRegister.LoginModel.Password, "", new { @class = "text-danger" })
            </div>
            <div class="mt-10">
                <button class="genric-btn primary">Se connecter</button>
            </div>
        </form>
        <br />Vous n'êtes pas encore membre de la communauté&nbsp;?<br /><b>Rejoignez-nous et partagez vos lectures avec d'autres personnes qui partagent le même amour du livre que vous&nbsp;!</b>
        <div class="mt-10">
            <input type="text" name="first_name" placeholder="Prénom" onfocus="this.placeholder = ''" onblur="this.placeholder = 'Prénom'" required class="single-input">
        </div>
        <div class="mt-10">
            <input type="text" name="last_name" placeholder="Nom" onfocus="this.placeholder = ''" onblur="this.placeholder = 'Nom'" required class="single-input">
        </div>
        <div class="mt-10">
            <input type="text" name="username" placeholder="Nom d'utilisateur" onfocus="this.placeholder = ''" onblur="this.placeholder = 'Nom d\'utilisateur" required class="single-input">
        </div>
        <div class="mt-10">
            <input type="email" name="EMAIL" placeholder="Email" onfocus="this.placeholder = ''" onblur="this.placeholder = 'Email'" required class="single-input">
        </div>
        <div class="mt-10">
            <input type="text" name="password-confirm" placeholder="Confirmez le mot de passe" onfocus="this.placeholder = ''" onblur="this.placeholder = 'Confirmez le mot de passe'" required class="single-input">
        </div>
        <div class="mt-10">
            <a href="#" class="genric-btn primary">S'inscrire</a>
        </div>
    </div>
</section>
<!-- End about Area -->
